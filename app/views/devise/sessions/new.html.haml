.row 
	.col-md-3
	.col-md-6
		.panel.panel-primary
			.panel-heading
				%h3 Log in
			.panel-body
				= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
					.form-inputs
						= f.input :email, required: false, autofocus: true
						= f.input :password, required: false
						= f.input_field  :remember_me, inline_label: "Remember me", as: :boolean if devise_mapping.rememberable?
					%br	
					.form-actions
						= f.button :submit, "Sign in", class: "btn btn-primary"
						.pull-right= render "devise/shared/links"
					%br
	.col-md-3